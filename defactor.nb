rightReducingMatrix[m_] := Last[SmithDecomposition[m]]
smithDefactor[m_] := Take[Inverse[rightReducingMatrix[m]], MatrixRank[m]]

smithDefactorThenHnf[m_] := normalize[smithDefactor[m]]

hermiteRightUnimodular[m_] := Transpose[First[HermiteDecomposition[Transpose[m]]]]
columnEchelonDefactor[m_] := Take[Inverse[hermiteRightUnimodular[m]], MatrixRank[m]]

columnEchelonDefactorThenHnf[m_] := normalize[columnEchelonDefactor[m]]
